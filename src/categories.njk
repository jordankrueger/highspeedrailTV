---
layout: layouts/base.njk
title: All Categories
permalink: /categories/
---

<header class="page-header">
  <div class="container">
    <h1>Browse by Category</h1>
    <p>Explore our curated collection of high-speed rail videos</p>
  </div>
</header>

<section class="section">
  <div class="container">
    <div class="categories-grid">
      {% for cat in collections.categories %}
        <article class="category-card">
          <h2><a href="/category/{{ cat.slug }}/">{{ cat.name }}</a></h2>
          <p>{{ cat.videos.length }} video{% if cat.videos.length != 1 %}s{% endif %}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
